# =============================================================================
# Splunk AI Sidekick Lab Environment Configuration
# =============================================================================
# Generated by setup_env.py

# =============================================================================
# Google ADK Configuration (Required)
# =============================================================================
GOOGLE_API_KEY="paste-your-actual-key-here"
# If using Gemini via Google AI Studio
GOOGLE_GENAI_USE_VERTEXAI="False"
GOOGLE_CLOUD_PROJECT="your-project-id"
GOOGLE_CLOUD_LOCATION="your-location" #e.g. us-central1

# LLM Model Configuration
BASE_MODEL=gemini-2.0-flash-exp
TUTOR_MODEL=gemini-2.0-flash-exp

# =============================================================================
# MCP Server Configuration (Required for Splunk Integration)
# =============================================================================
SPLUNK_MCP_SERVER_URL=http://localhost:8003/mcp/

# Splunk Connection Details (Required for MCP server)
SPLUNK_HOST='add-your-splunk-host'
SPLUNK_PORT='8089'
SPLUNK_SCHEME='https'
SPLUNK_USERNAME='your-splunk-username'
SPLUNK_PASSWORD='your-splunk-password'
SPLUNK_VERIFY_SSL='true'
# =============================================================================
# Logging Configuration (Optional)
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path relative to project root (default: logs/app.log)
LOG_FILE_PATH=logs/app.log
